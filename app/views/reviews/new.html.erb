
<% if logged_in? %>
  <h2>Make a new review for <%= @cocktail_bar.name %> below:</h2>

<%= form_with(model:[@cocktail_bar, @review]) do |f| %>
  <%= f.label "title:" %>
  <%= f.text_field :title %>
  <br>
  <%= f.label "comment:" %>
  <%= f.text_area :comment %>
  <br>
  <%= f.label "rating:" %>
  <%= f.number_field :rating, step: 0.5 %>
  <br>
  <%= f.submit "Submit" %>
  <% end %>


  <% else %>
  <p>You must be <%= link_to 'logged in', login_path %> to leave a review!</p>

<% end %>
