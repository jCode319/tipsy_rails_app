<h1>Make A New Review</h1>


<%= form_with model: @review, local: true do |f| %>
  <%= f.label "title:" %>
  <%= f.text_field :title %>
  <br>
  <%= f.label "comment:" %>
  <%= f.text_field :comment %>
  <br>
  <%= f.label "rating:" %>
  <%= f.number_field :rating, step: 0.5 %>
  <br>
  <%= f.submit "Submit" %>

<% end %>
