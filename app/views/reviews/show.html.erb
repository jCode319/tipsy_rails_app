<% if !logged_in? %>
  <%= redirect_to login_path %>
<% else %>
<h2><%= @review.cocktail_bar.name %>'s Review </h2>
<p>
Title: <%= @review.title.capitalize %>
<br>
Comment: <%= @review.comment.capitalize %>
<br>
Rating <%= @review.rating %>
<br>
Created by: <%= link_to @review.user.username, user_path(@review.user_id) %> on <%= @review.created_at.strftime("%m/%d/%y") %>
<br>
<br>
<%= link_to "Edit this review", edit_review_path(@review.user_id) %>
</p>
<%= link_to "Make this location a fav", cocktail_bar_path(@review.cocktail_bar_id) %>

<% end %>
